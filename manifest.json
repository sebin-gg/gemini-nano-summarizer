{
  "manifest_version": 3,
  "name": "Gemini Nano(+Cloud) Summarizer",
  "version": "3.0",
  "description": "Summarize web pages using Chrome's built-in Gemini Nano model or a fallback to Gemini 1.5 Flash / OpenAI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "minimum_chrome_version": "144",
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}
